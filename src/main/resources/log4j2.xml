<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Appenders>
   <Console name="LoggingToConsole" class="ch.qos.logback.core.ConsoleAppender">
      <PatternLayout>
           <Pattern>
                %m - %d{yyyy-MM-dd HH:mm:ss} [%c] (%p)%n
            </Pattern>
      </PatternLayout>	
   </Console>
</Appenders>
<Loggers>
 <Root level="INFO">
    <AppenderRef ref="LoggingToConsole" />
 </Root>

</Loggers>
</Configuration>